@model ProductViewModel

@{
	ViewData["Title"] = "Product N. " + Model.Id;
}

<form method="post" class="mb-3">
	<input name="id" />
	<button type"submit">Submit</button>
</form>

<div class="card">
	<div class="card-header">@ViewData["Title"]</div>
	<div class="card-body">
		<h5 class="card-title">Product Name: @Model.Name</h5>
		<p class="card-text">Product Price: @Model.Price lv.</p>
	</div>
</div>
