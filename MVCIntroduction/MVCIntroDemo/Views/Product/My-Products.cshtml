@model IEnumerable<ProductViewModel>

@{
	ViewData["Title"] = "All Products";
}

<div class="row row-cols-4 mb-3">
	<form asp-controller="Product" asp-action="My-Products" method="get">
		<div class="input-group">
			<input type="search" name="keyword" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
			<button type="submit" class="btn btn-outline-primary">search</button>
		</div>
	</form>
</div>

<div class="card" style="width: 18rem;">
	<div class="card-header">@ViewData["Title"]</div>
	<ul class="list-group list-group-flush">
		@foreach(ProductViewModel product in Model)
		{
			<li class="list-group-item">
				N.@product.Id: @product.Name - @product.Price lv.
			</li>
		}
	</ul>
</div>
